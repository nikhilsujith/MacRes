<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/activity_headBar</item>
        <item name="colorPrimaryDark">@color/dark_activity_headBar</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:windowBackground">@color/activity_background</item>

        <item name="android:textColor">#000000</item>

        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="Button_Style">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/dark_orange</item>
        <item name="android:textSize">16sp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Home_Button_Style">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/dark_orange</item>
        <item name="android:textSize">20sp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="List_Button_Style">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/dark_orange</item>
        <item name="android:textSize">10sp</item>
        <item name="android:capitalize">characters</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editText_style">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="small_editText_style">
        <item name="android:textSize">14sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="profile_editText_style">
        <item name="android:textSize">16sp</item>
        <item name="android:ems">20</item>
        <item name="android:textColorHint">@color/light_blue</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_window_textView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="profile_textView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="large_textView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="titles_textView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="general_textView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="listTitle_textView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="listHeaders_textView">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_textView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
