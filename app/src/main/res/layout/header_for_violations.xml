<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewViolationsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Violations"
        style="@style/listTitle_textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewViolationsTV"
        app:layout_constraintVertical_bias="0.016"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/violationIDTitleTV"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            style="@style/listHeaders_textView"
            android:layout_gravity="left"
            android:text="Violation ID"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:id="@+id/ViewDetailsTitleTV"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            style="@style/listHeaders_textView"
            android:text="View Details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toEndOf="@+id/violationIDTitleTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>